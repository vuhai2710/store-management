# Auto detect text files and perform LF normalization
* text=auto

# Source code files - use LF
*.java text eol=lf
*.kt text eol=lf
*.scala text eol=lf
*.groovy text eol=lf

# Configuration files - use LF
*.yml text eol=lf
*.yaml text eol=lf
*.properties text eol=lf
*.xml text eol=lf
*.json text eol=lf

# SQL files - use LF
*.sql text eol=lf

# Documentation - use LF
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Scripts - preserve original or use LF
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
/mvnw text eol=lf

# Windows batch files - use CRLF
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.jar binary
*.war binary
*.ear binary
*.class binary
